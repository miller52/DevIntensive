<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:id="@+id/auth_coordinator_layout"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 tools:ignore="contentDescription">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg"/>

        <android.support.v7.widget.CardView
            android:id="@+id/auth_cardview"
            android:layout_width="@dimen/spacing_greatest"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_16"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_big_32">

                    <View
                        android:id="@+id/auth_login_indicator"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@color/color_accent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="@dimen/padding_normal_8"
                        android:paddingTop="@dimen/padding_normal_8"
                        android:text="@string/auth.authorization_enter"
                        android:textAllCaps="true"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/font_large_20"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding_large_24"
                    android:paddingLeft="@dimen/padding_large_24"
                    android:paddingRight="@dimen/padding_large_24">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/auth_til_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/auth_et_email"
                            style="@style/auth_edit_text_style"
                            android:hint="@string/auth.email"
                            android:inputType="textEmailAddress"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/auth_til_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/auth_et_password"
                            style="@style/auth_edit_text_style"
                            android:hint="@string/auth.password"
                            android:inputType="textPassword"/>

                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/auth_chb_save_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-regular"
                        android:text="@string/auth_layout_save_login_cb"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_normal_14"/>

                    <Button
                        android:id="@+id/auth_login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small_16"
                        android:minWidth="@dimen/spacing_auth_button"
                        android:text="@string/auth.login"
                        android:textAllCaps="true"
                        android:theme="@style/AppTheme.Button.Red"/>

                    <TextView
                        android:id="@+id/auth_tv_remember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small_16"
                        android:fontFamily="sans-serif-regular"
                        android:text="@string/auth.remember"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_normal_14"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>