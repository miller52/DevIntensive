<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="icon">
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_width">@dimen/size_small_24</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_bigger_32</item>
        <item name="android:layout_gravity">top|right</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_little_16</item>
        <item name="android:layout_gravity">top|left</item>
    </style>

    <style name="panel_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/spacing_zero_0</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="panel_sub_item">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="item_text_input_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="gorizontal_delimeter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_delimeter_line</item>
        <item name="android:layout_marginLeft">@dimen/spacing_great_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="drawer_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="auth_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="item_user_raiting_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="item_user_stat_panel_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="item_user_stat_panel_texts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.up">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.down">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="data_linear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_big_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/spacing_bigger_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_little_16</item>
    </style>

    <style name="edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
